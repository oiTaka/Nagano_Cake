<div class="container">
 <h3 class="offset-1 my-5 text title-text">商品新規登録</h3>

 <div class="offset-2">
 <%= form_with model: @item, url: admin_items_path, local:true do |f| %>
  <div class="row mt-5 light-text">
    <label class="col-md-2 mr-2 text">商品画像</label>
    <%= f.attachment_field :image, class: 'col-md-5' %>
  </div>
  <div class="row mt-2 light-text">
    <label class="col-md-2 mr-2 text">商品名</label>
    <%= f.text_field :name, autofocus: true, placeholder: "商品名", class: 'col-md-3' %>
  </div>
  <div class="row mt-3 light-text">
    <label class="col-md-2 mr-2 text">商品説明<br/><br/><br/><br/></label>
    <%= f.text_area :introduction, autofocus: true, placeholder: "ここに商品名を記述します", class: 'col-md-3' %>
  </div>
  <div class="row mt-2 light-text">
    <label class="col-md-2 mr-2 text">税抜価格</label>
    <%= f.text_field :price, autofocus: true, placeholder: "1000", class: 'col-md-3 mr-1' %>円
  </div>
  <div class="row mt-2 text">
    <label class="col-md-2 mr-2"></label>
    <%= f.submit "新規登録", class: 'ml-4 col-md-2 btn btn-success' %>
  </div>
 <% end %>
 </div>
</div>