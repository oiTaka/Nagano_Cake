<div class="container">
 <div class="row mb-4">
  <div class="col-12">
   <h3 class="my-5 text title-text">会員一覧</h3>
   <div class="row">
    <div class="col-12 mx-auto">
     <table class="table table-hover">
      <thead>
       <tr class="table-active text">
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>ステータス</th>
        <th></th>
       </tr>
      </thead>

      <tboy>
       <% @customers.each do |customer| %>
        <tr class="light-text">
         <td><%= customer.id %></td>
         <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer.id), class: 'text-dark' %></td>
         <td><%= customer.email %></td>
         <td><%= customer.is_active %></td>
         <td></td>
        </tr>
       <% end %>
      </tboy>
     </table>
     <div class="mx-auto"><%= paginate @customers %></div>
    </div>
   </div>
  </div>
 </div>
</div>
