
<div class="container">
 <div class="row md-5">
   <div class="col-10 mx-auto">
    <h2 class="my-5 text title-text">管理者ログイン</h2>

    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
     <div class="mt-4 form-group row text">
      <%= f.label :メールアドレス, class: 'col-3 offset-2 col-form-label' %>
      <div class="col-5 light-text">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
     </div>

     <div class="form-group row text">
       <%= f.label :パスワード, class: 'col-3 offset-2 col-form-label' %>
       <div class="col-5 light-text">
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
       </div>
     </div>

     <div class="form-group row mt-4">
      <div class="mt-3 col-2 offset-5 text">
       <%= f.submit "ログイン", class: 'btn btn-primary w-100' %>
      </div>
     </div>
    <% end %>
  </div>
 </div>
</div>
