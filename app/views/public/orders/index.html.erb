<div class="container my-5">

  <div class="row">
    <div class="offset-1 text-center">
      <h3 class="text title-text">
        注文履歴一覧
      </h3>
    </div>
  </div>

  <div class="row mt-5">
    <table class="table table-bordered table-hover">

      <thead class="table-active text">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr class="light-text">
          <td class="align-middle"><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td class="align-middle">
              〒<%= order.zip_code %><br>
              <%= order.address %><br>
              <%= order.name %>
          </td>
          <td class="align-middle">
            <% order.order_details.each do |f| %>
              <%= f.item.name %><br>
            <% end %>
          </td>
          <td class="align-middle"><%= order.total_payment %></td>
          <td class="align-middle">
            <%= link_to "表示する", order_path(order.id), class: "btn btn-primary col-10" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="mx-auto"><%= paginate @orders %></div>
  </div>
</div>