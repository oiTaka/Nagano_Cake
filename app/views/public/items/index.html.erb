<div class="container">
  <h2 class="mt-5 mb-5 text title-text">
    商品一覧（全 <%= @items.total_count %> 件）
  </h2>
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3 mx-auto">
        <p class="img-wrap">
          <%= link_to item_path(item.id) do %>
            <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200", class: "border rounded" %>
          <% end %>
        </p>
        <h5 class="text"><%= item.name %></h5>
        <p class="text">
         ￥<%= item.price %>
        </p>
      </div>
    <% end %>
  </div>
  <div class="mx-auto"><%= paginate @items %></div>
</div>